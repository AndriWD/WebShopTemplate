@model IQueryable<ServiceItem>
@{ 
    
    ViewBag.Title = "Панель Адміністратора";
}

<div>
    <h1>@ViewBag.Title</h1>
    <div>
        <h3>Наші послуги</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="">Добавити послугу</a>
        </div>
        @if(Model.Any())
            {
                <div>
                    @foreach (ServiceItem item in Model)
                    {
                    <div>
                        <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                        |
                        <form style="display: inline-block;" id="form-@item.Id" asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit">
                            <input type="hidden" name="id" value="@item.Id" />
                            <a href="#" onclick="document.getElementById('form-@item.Id').submit();">Видалити</a>
                        </form>
                        |
                        <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">
                            @($"{item.Title}")
                        </a>
                    </div>
                    }
                </div>
            }
    </div>
    <div class="div-box">
        <h3>Редагувати сторінку сайта</h3>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Головна сторінка</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageServices">Наші послуги</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageContacts">Контакти</a>
    </div>
    <div class="div-box">
       <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
           <input type="submit" value="Вийти"/>
       </form>
    </div>
</div>